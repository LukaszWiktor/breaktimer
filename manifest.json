{
    "manifest_version": 2,
    "version": "0.0.2",
    "name": "BreakTimer",
    "description": "Enforce periodic breaks to prevent RSI / eye strain.",
    "icons": {
        "48" : "image/icon48.png",
        "128": "image/icon128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "js/background.js"
            ]
        }
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "alwaysOnTopWindows",
        "fullscreen"
    ],
    "minimum_chrome_version": "28"
}
