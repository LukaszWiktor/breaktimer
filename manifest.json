{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "BreakTime",
    "description": "Enforce periodic breaks.",
    "icons": {
        "48" : "image/icon48.png",
        "128": "image/icon128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "js/background.js"
            ]
        }
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "<all_urls>", {"fileSystem": ["write"]},
        "syncFileSystem"
    ],
    "minimum_chrome_version": "28"
}
